
% ===============================================   Main   program =============
%  PROGRAM NAME:   Simula a.s. - SIMULA TEST NO 59
%
%  PURPOSE:     Test virtual label in external class.
%
%  EXTERNAL CLASS: C59 - has to be compiled first.
%
%  WRITTEN BY:  BEH   04/08-86
% ==============================================================================
BEGIN
   external class c59 ;
   Boolean verbose=false;

   Boolean found_error ;

   if verbose then begin
   Outtext ("--- START Simula a.s. TEST 59") ;
   Outimage ;
   Outtext ("--- Test virtual label in external class.") ;
   Outimage ; Outimage ;
   end;

   c59 begin
      if verbose then trace("AT BEGIN Simtst59");
      i := 3 ;
   L :
      if verbose then trace("AT LABEL L IN Simtst59");
      if i <> 1 then
      begin
         Outtext ("*** error : Value of i : ") ;
         Outint (i, 4) ;
         Outimage ;
         found_error := true
      end ;
   end ;

   IF found_error THEN
   ELSE
   BEGIN
      Outtext ("--- NO ERRORS FOUND IN TEST 59") ;
   END ;

   if verbose then begin
   Outtext ("--- END Simula a.s. TEST 59") ;
   Outimage
   end
   
 END
