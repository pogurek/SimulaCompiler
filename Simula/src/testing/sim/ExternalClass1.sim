
Class Separat(i); integer i;
begin
   Text t;
   Integer nA,nB;
   
   Text Procedure edIdent(id,n); Character id; Integer n;
   begin Text t; t:-Copy("(Xn)");
         t.sub(2,1).putChar(id);
         t.sub(3,1).putChar(Char(Rank('0')+n));
         edIdent:-t;
   end;

   Procedure Print (msg); Text msg;
   begin OutText(msg); Outimage; end;
   Ref (A) x;
   Ref (B) y;
 
  Infile class MyInfile; virtual: ref(FILE) Procedure pvirt is ref(FILE) Procedure actual(i,j); integer i,j;;
  Begin
     ref(FILE) Procedure pvirt(i,j); integer i,j;
     begin i:=34;
     end;
     integer procedure inRom;
     Begin 
        ref(FILE) myFile;
        myFile :- pvirt(4,3);
     end;
  end;

   Class A;
   Begin Real array X(P:1);
         Integer ord;
         Text procedure idA; begin idA:-edIdent('A',ord); end;
         ord:=nA:=nA+1;
         Print("Event A-1: " & idA);
   End;

   A Class B;
   Begin Real array X(P:1);
         Integer ord;
         Text procedure idB; begin idB:-edIdent('B',ord); end;
         ord:=nB:=nB+1;
         Print("Event B-1: " & idB);
   End;

   Real Procedure P;
   Begin 
         Outtext("Event P-1: Just Before First Resume: ");
         Outtext(" x="); outtext(if x=/= none then x.idA else "none");
         Outtext(" y="); outtext(if y=/= none then y.idB else "none");
         Outimage;
         
    End;

   Print("--- Start Statements of Class Separat") ;
   nA:=0; nB:=0;

end;